[xboxdrv]       # clear all mappings
ui-clear=true

[ui-buttonmap]  # colored buttons
a = KEY_D
x = KEY_S
y = KEY_F

[ui-buttonmap]  # D-pad
dl = KEY_LEFT
dr = KEY_RIGHT
du = KEY_UP
dd = KEY_DOWN

[ui-buttonmap]  # start button
start = KEY_ENTER

